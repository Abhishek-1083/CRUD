<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <style>
        table,th,td{
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Username</th>
        </tr>
        <% for(user of users){ %>
        <tr>
            <td> <%= user.id %> </td>
            <td> <%= user.email %> </td>
            <td> <%= user.username %> </td>
            <td>
                <form action="/users/<%= user.id %>/edit" method="get">
                    <button>Edit Username</button>
                </form>
            </td>
            <td>
                <form action="/users/<%= user.id %>?_method=Delete" method="post">
                    <button>Delete User</button>
                </form>
            </td>
        </tr>
        <% } %>
    </table>
</body>
</html>